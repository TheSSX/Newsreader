{
  "name": "Newsreader",
  "version": "0.3",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/js/jquery.js",
        "src/js/popup.mjs"
      ]
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "src/html/popup.html"
  },
  "background": {
    "page": "src/html/bulletin.html",
    "persistant": false
  },
  "permissions": [
    "storage"
  ]
}
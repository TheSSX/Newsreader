{
  "name": "Newsreader",
  "version": "0.4",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "src/js/jquery.js",
        "src/js/popup.mjs"
      ]
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_popup": "src/html/popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "page": "src/html/bulletin.html",
    "persistent": false
  },
  "permissions": [
    "storage"
  ]
}